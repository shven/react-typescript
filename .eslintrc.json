{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "ignorePatterns": ["**/*.css","**/*.scss"],
    "rules": {
        "prettier/prettier": [
            "error", {
                "tabWidth": 4,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "none",
                "printWidth": 180,
                "jsxSingleQuote": true,
                "useTabs": false,
                "endOfLine": "auto",
                "max-len": ["error", { "code": 80 }],
                "importOrder": [
                    "^react(.*)$",
                    "<THIRD_PARTY_MODULES>",
                    "./types",
                    "^[.](?!.*.(scss|css)$).*$",
                    "(.*).(scss|css)$"
                ],
                "importOrderSeparation": true,
                "importOrderSortSpecifiers": true
            }
        ],

        "@typescript-eslint/no-namespace": "off",
        "no-duplicate-imports": "error"
    }
}